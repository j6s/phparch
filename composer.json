{
    "name": "j6s/phparch",
    "description": "Architecture Testing for PHP projects",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Hertenstein",
            "email": "phparch@thej6s.com"
        }
    ],
    "require": {
        "php": "^7.4|8.0",

        "nikic/php-parser": "^4.0",
        "symfony/finder": "^4.1|^5.0",
        "phpdocumentor/reflection-docblock": "^5.2",
        "phpdocumentor/type-resolver": "^1.4",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "suggest": {
        "phpunit/phpunit": "For assertion helpers to work correctly."
    },
    "autoload": {
        "psr-4": {
            "J6s\\PhpArch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "J6s\\PhpArch\\Tests\\": "tests/"
        }
    }
}
